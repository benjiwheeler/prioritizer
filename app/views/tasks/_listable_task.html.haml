%tr
  %td{style: "padding: .4em"}= task.name
  %td{style: "padding: .4em"}= "%.2f" % task.get_overall_imp_alone!
  %td{style: "padding: .4em"}
    v:
    = "%.2f" % task.vital
    i:
    = "%.2f" % task.immediate
    h:
    = "%.2f" % task.heavy
    l:
    = "%.2f" % task.long
  %td{style: "padding: .4em"}= "%.2f" % task.get_session_rand!
  %td{style: "padding: .4em"}= "%.2f" % task.attempts_report_done_amount
  %td{style: "padding: .2em"}= "%.2f" % task.postponed_recently_amount
  %td{style: "padding: .4em"}= "%.2f" % task.addressed_recently_amount
  %td{style: "padding: .4em"}= "%.2f" % task.position_amount
  %td{style: "padding: .4em"}= link_to 'Show', task
  %td{style: "padding: .4em"}= link_to 'Edit', edit_task_path(task)
  %td{style: "padding: .4em"}= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }
